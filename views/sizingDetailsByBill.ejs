<%- include('partials/header') %>

<div class="dashcontainer">
  <div class="emptySide"></div>
  <div class="mainSide">
    <div class="clientDetails">Sizing Details by Monthly Bill:</div>

    <% if (errors) { %>
    <div class="errorNotification"><%= errors %></div>
    <% } %>

    Client ID:
    <span class="clientDetails"><%= clientDetails[0].clientID %></span><br />
    Name:
    <span class="clientDetails"><%= clientDetails[0].firstname %> <%= clientDetails[0].lastname %></span>
    <br /><br />

    <form action="/suggestInverterByBill" method="POST">
      <label for="monthlyBill">Average Monthly Bill (Php)</label><br />
      <input class="standard_field" type="number" id="monthlyBill" name="monthlyBill" /><br />

      <label for="energyPriceRate">Local Energy Price (Php/kWh)</label><br />
      <input class="standard_field" type="number" id="energyPriceRate" name="energyPriceRate" value="12.65" min="0" step="0.01" /><br />

      <label for="peakSunHours">Peak Sun Hours</label><br />
      <input class="standard_field" type="number" id="peakSunHours" name="peakSunHours" value="4.0" min="0" step="0.01" /><br />

      <label for="daytimeUsePercent">Daytime Use in Percent</label><br />
      <input class="standard_field" type="number" id="daytimeUsePercent" name="daytimeUsePercent" value="40" min="0" max="100" step="1" onmouseout="calcNightUse()" /><br />

      <label for="nighttimeUsePercent">Night Time Use in Percent</label><br />
      <input class="standard_greyed_field" type="number" id="nighttimeUsePercent" name="nighttimeUsePercent" value="60" readonly /><br />

      <label for="currentPhase">Phase Type</label><br />
      <select name="currentPhase" id="currentPhase" class="standard_field">
        <option value="1">Single Phase</option>
        <option value="3">Three Phase</option>
      </select>
      <br />

      <label for="netmeterUse">Netmeter Use</label><br />
      <select name="netmeterUse" id="netmeterUse" class="standard_field">
        <option value="0">No</option>
        <option value="1">Yes</option>
      </select>
      <br />

      <label for="netmeterRate">Netmeter Sell Price (Php/kWh)</label><br />
      <input class="standard_field" type="number" id="netmeterRate" name="netmeterRate" value="7.37" min="0" step="0.01" /><br />

      <label for="pvsystem_type">PV System Type</label><br />
      <select name="pvsystem_type" id="pvsystem_type" class="standard_field">
        <option value="Grid-tie">Grid-tie</option>
        <option value="Hybrid">Hybrid / Off-Grid</option>
      </select>
      <br /><br />

      <button type="submit" id="solarsize-btn" class="standard_btn">
        SUBMIT
      </button>
      <button type="submit" id="cancel-btn" class="standard_btn" formaction="/cancelCreateClient" formmethod="post">
        CANCEL
      </button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>